  <filter>
    <filter-name>fileUpload</filter-name>
    <filter-class>com.ruiec.web.filter.FileUpload</filter-class>
  </filter>
  <filter>
    <filter-name>ExeclFileUpload</filter-name>
    <filter-class>com.ruiec.web.filter.ExeclFileUpload</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>fileUpload</filter-name>
    <url-pattern>/admin/upload.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>fileUpload</filter-name>
    <url-pattern>/userCenter/upload</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>fileUpload</filter-name>
    <url-pattern>/userCenter/upload.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ExeclFileUpload</filter-name>
    <url-pattern>/execl/execlFileUpload.jsp</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>springMVC</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:applicationContext-mvc.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>springMVC</servlet-name>
    <url-pattern>*.shtml</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminRedirect</servlet-name>
    <servlet-class>com.ruiec.web.servlet.AdminRedirect</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminRedirect</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <error-page>
      <error-code>404</error-code>
      <location>/WEB-INF/temlate/admin/common/404.html</location>
  </error-page>
