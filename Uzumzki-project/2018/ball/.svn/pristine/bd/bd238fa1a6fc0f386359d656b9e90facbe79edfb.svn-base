<%@ page contentType="text/html;charset=UTF-8" language="java"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<style type="text/css">
	.contextMenuDialog .listrow{border: none}
</style>
<div class="contextMenuDialog" id="item1">
    <div class="card-body">
        <div class="row">
            <div class="input-group col-lg-9">
                <div class="row">
                    <div class="col-lg-6 listrow">
                        <span class="nti">场馆编号：</span>
                        <span class="ncon">
                            <input class="form-control" type="text" value="${venueno}" name="id" id="id">
                        </span>
                    </div>
                    <div class="col-lg-6 listrow">
                        <span class="nti">状态：</span>
                        <span class="ncon">
                            <select class="form-control" name="showflag" id="showflag">
                                <option value="正常" <c:if test="${showflag eq '1'}">selected="selected"</c:if>>正常</option>
                                <option value="禁用" <c:if test="${showflag eq '2'}">selected="selected"</c:if>>禁用</option>
                            </select>
                        </span>
                    </div>
                    <div class="col-lg-6 listrow">
                        <span class="nti">原始ID：</span>
                        <span class="ncon">
                            <input class="form-control" type="text" value="${venueid}" name="id" id="id">
                        </span>
                    </div>
                    <div class="col-lg-6 listrow">
                        <span class="nti">场馆：</span>
                        <span class="ncon">
                            <input class="form-control" type="text" value="${name}" name="name" id="name">
                        </span>
                    </div>
                    <div class="col-lg-6 listrow">
                        <span class="nti">城市：</span>
                        <span class="ncon">
                            <select class="form-control" name="cityid" id="cityid">
                            	<c:forEach items="${citys}" var="city">
                                	<option value="${city.id }" <c:if test="${city.id eq cityid}">selected="selected"</c:if>>${city.city }</option>
                              	</c:forEach>
                            </select>
                        </span>
                    </div>
                    <div class="col-lg-6 listrow">
                        <span class="nti">电话：</span>
                        <span class="ncon">
                            <input class="form-control" type="text" value="${employee.remark}" name="remark" id="remark">
                        </span>
                    </div>
                    <div class="col-lg-6 listrow">
                        <span class="nti">区县：</span>
                        <span class="ncon">
                            <select class="form-control" name="cityid" id="cityid">
                            	<c:forEach items="${citys}" var="city">
                                	<option value="${city.id }" <c:if test="${city.id eq cityid}">selected="selected"</c:if>>${city.city }</option>
                              	</c:forEach>
                            </select>
                        </span>
                    </div>
                    <div class="col-lg-4 listrow">
                        <span class="nti">&nbsp;</span>
                        <button class="form-control btn btn-primary w-25" id="saveEmployee">保存</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 text-center">
                <img src="${employee.icon}"
                     style="width: 180px;height: 180px; border-radius: 180px; border:1px solid #eee;"
                      onerror="javascript:this.src='/WebBackAPI/admin/static/image/error.png'">
            </div>
        </div>
    </div>
</div>
<script>
	$(function(){
		$("#saveEmployee").click(function () {
			var status = $('#status').val();
			var remark = $('#remark').val();
			var storemanage = $('#storemanage').val();
			var id = '${employee.id}';
           	$.ajax({  
                type : "POST",  //提交方式  
                url : "/WebRelease/admin/employee/saveEmployee",//路径  
                data : {id : id, status : status, remark : remark, storemanage : storemanage},//数据，这里使用的是Json格式进行传输  
                dataType:"json",
                success : function(result) {//返回数据根据结果进行相应的处理  
                    if ( result.code == 200 ) {  
                    	parent.window.location.href="/WebRelease/admin/employee/listview";
                    } else {  
                		layer.confirm(result.msg, {
                			btn: ['确定'] //按钮
                		});
                    }  
                }  
            }); 
		})
	})
</script>